package authtemplates

templ Head(title string){
	<head>
		<meta charset="UTF-8"></meta>
		<meta name="viewport" content="width=device-width, initial-scale=1.0"></meta>
		<title>{title}</title>
	</head>
}

templ Brand(){
	<h1>
		<a href="/">
			Logo
		</a>
	</h1>
}

templ Header(user interface{}) {
	<header>
		<nav>

			@Brand()

			<div>
				<a href="/pricing">
					Pricing
				</a>

				if user {
					<a href="/user">
						User
					</a>
				} else {
					<a href="/join">
						Login/Register
					</a>
				}
			</div>

		</nav>
	</header>
}

